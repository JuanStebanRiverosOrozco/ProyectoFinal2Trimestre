{
  "compilerOptions": {
    // 📁 Organización de archivos
    "rootDir": "./src",
    "outDir": "./dist",

    // ⚙️ Configuración del entorno
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // 📦 Tipos para Node.js
    "types": ["node"],
    "lib": ["es2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "scripts"]
}
